{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "//#lint:root": {
      "cache": false
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["//#lint:root"]
    },
    "lint:fix": {
      "outputs": ["**/*.{ts,tsx,md}"]
    },
    "test": {
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
